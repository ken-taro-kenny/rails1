<header>
  <%= render "shared/partial" %>
</header>

<main>
<h2>スケジュール編集</h2>

<%= render "shared/error", obj: @schedule %>

<%= form_with model: @schedule, local: true do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    
    <tr>
      <th><%= f.label :start_date ,"開始日" %></th>
      <td><%= f.date_field :start_date %></td>
    </tr>
    
    <tr>
      <th><%= f.label :end_date ,"終了日" %></th>
      <td><%= f.date_field :end_date %></td>
    </tr>
    
    <tr>
      <th><%= f.label :all_day ,"終日" %></th>
      <td>
        <%= f.check_box :all_day, {}, true %>
        終日の場合はチェックを入れる
      </td>
    </tr>
    
    <tr>
      <th><%= f.label :detail,"スケジュールメモ" %></th>
      <td><%= f.text_area :detail %></td>
    </tr>
  </table>
  
  <div>
    <br>
    <p><%= f.submit "編集を完了する"%></p>
    <p><%= link_to "スケジュール一覧に戻る", :schedules %></p>
  </div>
<% end %>
</main>

<footer>
  <%= render "shared/partial2" %>
</footer>